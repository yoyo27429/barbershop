@page
@model WebApp.Pages.Admin.Ads.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h2>Advertising management</h2>

<p>
    <a asp-page="Create">Add advertisement</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ad) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AdID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AdID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AdID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
